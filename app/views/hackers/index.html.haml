%h2= t('users.title')

.filters.pull-right
  .dropdown
    %button#sort_hackers.btn.dropdown-toggle{type: "button", "aria-expanded" => "false", "aria-haspopup" => "true", "data-bs-toggle" => "dropdown", :href => "#"}
      = t('users.order.title')
    %ul.dropdown-menu.dropdown-menu-right{"aria-labelledby" => "sort_hackers"}
      %li= link_to t('users.order.id'), users_path, class: "dropdown-item"
      %li= link_to t('users.order.payments'), users_path(order: 'payments'), class: "dropdown-item"
      %li= link_to t('users.order.last_seen'), users_path(order: 'last_seen'), class: "dropdown-item"
      %li= link_to t('users.order.course'), users_path(order: 'course'), class: "dropdown-item"

.row
  .col-lg-12
    = render 'hackers', hackers: @active_users

%h4 Suspended, banned and forgotten
.row
  .col-lg-12
    = render 'hackers', hackers: @non_active_users
