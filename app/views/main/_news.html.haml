- @news.each do |news|
  - url = news.url.present? ? news.url : news_path(news)
  .col-lg-6.news-entry
    %h2
      = news.title
    %p
      = link_to(url, target: '_blank', rel: 'no-follow', title: strip_tags(news.short_desc)) do
        = image_tag(image_path(news.photo.url(:thumb)), class: "img-responsive center",
          style: "float:left", alt: strip_tags(news.short_desc) )
    %p
      = news.short_desc.html_safe
    %p
      %a.btn.btn-primary{href: news_path(news), role: 'button'} Читать дальше &raquo;
